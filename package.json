{
	"name": "rest-api-boilerplate",
	"version": "1.0.0",
	"description": "",
	"main": "dist/app.js",
	"scripts": {
		"build": "tsc",
		"debug": "npm run build && npm run watch-debug",
		"serve": "node dist/app.js",
		"serve-debug": "nodemon --inspect dist/server.js",
		"start": "npm run serve",
		"watch": "cross-env NODE_ENV=development concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
		"watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\"",
		"watch-node": "nodemon dist/app.js",
		"watch-ts": "tsc -w"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"amqplib": "^0.6.0",
		"body-parser": "^1.19.0",
		"concurrently": "^5.3.0",
		"connect-redis": "^5.0.0",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"csurf": "^1.11.0",
		"dotenv": "^8.2.0",
		"ejs": "^3.1.5",
		"express": "^4.17.1",
		"express-session": "^1.17.1",
		"module-alias": "^2.2.2",
		"moment": "^2.29.1",
		"mysql2": "^2.2.5",
		"redis": "^3.0.2",
		"reflect-metadata": "^0.1.13",
		"sequelize": "^6.3.5",
		"winston": "^3.3.3"
	},
	"devDependencies": {
		"@types/amqplib": "^0.5.14",
		"@types/connect-redis": "0.0.16",
		"@types/cookie-parser": "^1.4.2",
		"@types/cors": "^2.8.8",
		"@types/express": "^4.17.8",
		"@types/express-session": "^1.17.3",
		"@types/jsonwebtoken": "^8.5.0",
		"@types/module-alias": "^2.0.0",
		"@types/moment": "^2.13.0",
		"@types/node": "^14.6.0",
		"@types/nodemailer": "^6.4.0",
		"@types/redis": "^2.8.26",
		"@types/uuid": "^8.3.0",
		"@types/validator": "^13.1.0",
		"@types/winston": "^2.4.4",
		"cross-env": "^7.0.2",
		"nodemon": "^2.0.4",
		"tslint": "^6.1.3",
		"typescript": "^3.9.7"
	}
}
